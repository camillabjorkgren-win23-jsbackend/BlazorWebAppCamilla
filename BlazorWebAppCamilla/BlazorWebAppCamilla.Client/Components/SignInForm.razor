@rendermode InteractiveAuto

<EditForm method="post" class="form" novalidate>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <InputText type="email" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Password</label>
        <InputText type="password" class="form-control" />
    </div>
    <div class="mb-3 form-check">
        <InputCheckbox class="form-check-input" />
        <label class="form-check-label">Remember me</label>
    </div>
    <button type="submit" class="button btn-theme">Sign in</button>
    <div class="form-text"><NavLink href="/forgotpassword">Forgot your password?</NavLink></div>
</EditForm>

